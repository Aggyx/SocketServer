server {
    host 127.0.0.1
    port 8080
    port 8081
    server_name algo.com

    error_page 404 var/www/error-pages/404.html

    client_max_body_size 10M
    
    location / {
        method GET
        root /var/www/site
        index index.html
        autoindex off
    }
    location /uploads {
        method GET
        root /var/www/uploads/
        autoindex on
    }
    location /upload {
        method GET POST
        root /var/www/site/forms
        index UploadFile.html
        upload_store var/www/uploads
        client_max_body_size 5M
        autoindex off
        content_type image/jpeg image/png application/pdf
    }
    location /redirect {
        method GET
        return 301 http://127.0.0.2:8082/
    }
    location /temporary {
        method GET
        return 302  http://127.0.0.2:8082/
    }
    location /media {
        method GET
        root /var/www/site/media
        index MAID.png
        autoindex on
    }
    location /delete {
        method GET POST DELETE
        root /var/www/uploads
        autoindex on
    }
    location /cgi-bin {
        method GET POST
        root var/www/cgi-bin/
        index greet.py
        cgi_pass /usr/bin/python3
    }
    location /cgi-bin2 {
        method GET POST
        root var/www/cgi-bin/
        index greet.py
        cgi_pass /usr/bin/python3
    }
}


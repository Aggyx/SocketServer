server {
    host 127.0.0.1;
    port 8000;
    server_name example.com;

    error_page 404 /404.html;
    client_max_body_size 8M;

    location / {
        root /var/www/html;
        index index.html;
        autoindex off;
        limit_except GET POST;
    }

    location /uploads {
        root /var/www/uploads;
        allow_upload on;
        upload_store /var/uploads;
    }

    location ~ \.py$ {
        cgi_pass /usr/bin/python;
    }
}
